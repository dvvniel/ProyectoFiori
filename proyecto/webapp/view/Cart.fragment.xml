<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="Tu Carrito" contentWidth="600px">
        <content>
            <Table items="{cart>/items}" noDataText="El carrito está vacío">
                <columns>
                    <Column>
                        <Text text="Producto"/>
                    </Column>
                    <Column hAlign="Center" width="4rem">
                        <Text text="Cant."/>
                    </Column>
                    <Column hAlign="End">
                        <Text text="Precio"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{cart>ProductName}"/>
                            <Text text="{cart>Quantity}"/>
                            <ObjectNumber number="{cart>UnitPrice}" unit="USD"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button text="Cerrar" press="onCloseCart"/>
            <Button text="Finalizar Compra" type="Emphasized" press="onPressProceed" enabled="{= ${cart>/items}.length > 0 }"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
